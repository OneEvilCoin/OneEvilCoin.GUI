<UserControl x:Class="OneEvil.OneEvilCoinGUI.Controls.PathSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" x:Name="TextBoxPath"/>
        <Button Grid.Column="1" Click="ButtonSelectPath_Click" Padding="0" Margin="8 0 0 0">
            <Image Source="/Resources/Images/Open.png" Style="{StaticResource StyleImagePictogram}" Margin="2"/>
        </Button>
    </Grid>
</UserControl>
