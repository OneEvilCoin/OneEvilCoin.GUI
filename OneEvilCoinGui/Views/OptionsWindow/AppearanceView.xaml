<UserControl x:Class="OneEvil.OneEvilCoinGUI.Views.OptionsWindow.AppearanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=OptionsAppearanceLanguage, Source={StaticResource Resources}}" VerticalAlignment="Center"/>
        <ComboBox x:Name="ComboBoxLanguages" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Margin="8 0 0 0"/>
    </Grid>
</UserControl>
